<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_score_item"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true">

    <TextView
        android:id="@+id/tv_score_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:gravity="top"
        android:maxLines="2"
        android:maxWidth="260dp"
        android:textColor="@color/grey_800"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_score_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_score_item_name"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:gravity="bottom"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_score_item_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_score_item_name"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/tv_score_item_type"
        android:gravity="bottom"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_score_item_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:gravity="top"
        android:textColor="@color/green_300"
        android:textSize="28sp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_score_item_credit"
        android:layout_marginTop="8dp"
        android:background="@color/grey_400"
        android:src="@mipmap/divider"/>
</RelativeLayout>