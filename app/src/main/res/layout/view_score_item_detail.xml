<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="学期"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_score_item_detail_term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="8dp"
        android:text="2015-2016 第二学期"
        android:textColor="@color/grey_900"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_score_item_detail_term"
        android:layout_marginTop="8dp"
        android:text="课程号"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_score_item_detail_course_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_score_item_detail_term"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="8dp"
        android:text="125442321"
        android:textColor="@color/grey_900"
        android:textSize="16sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_score_item_detail_course_id"
        android:layout_marginTop="8dp"
        android:text="课程名"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_score_item_detail_course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_score_item_detail_course_id"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="8dp"
        android:text="数据结构与算法"
        android:textColor="@color/grey_900"
        android:textSize="16sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_score_item_detail_course_name"
        android:layout_marginTop="8dp"
        android:text="课程类别"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_score_item_detail_course_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_score_item_detail_course_name"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="8dp"
        android:text="专业必修"
        android:textColor="@color/grey_900"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_score_item_detail_course_type"
        android:layout_marginTop="8dp"
        android:text="课程性质"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_score_item_detail_course_property"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_score_item_detail_course_type"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="8dp"
        android:text="必修课"
        android:textColor="@color/grey_900"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_score_item_detail_course_property"
        android:layout_marginTop="8dp"
        android:text="修读方式"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_score_item_detail_study_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_score_item_detail_course_property"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="8dp"
        android:text="初修"
        android:textColor="@color/grey_900"
        android:textSize="16sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_score_item_detail_study_method"
        android:layout_marginTop="8dp"
        android:text="学分"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_score_item_detail_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_score_item_detail_study_method"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="8dp"
        android:text="4.0"
        android:textColor="@color/grey_900"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_score_item_detail_credit"
        android:layout_marginTop="8dp"
        android:text="成绩"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_score_item_detail_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_score_item_detail_credit"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="8dp"
        android:text="89"
        android:textColor="@color/grey_900"
        android:textSize="16sp"/>

</RelativeLayout>